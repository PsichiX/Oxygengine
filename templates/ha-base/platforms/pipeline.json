{
  "commands": [
    {
      "Pipeline": {
        "source": "../assets",
        "destination": "../assets-intermediate",
        "clear_destination": true,
        "commands": [
          {
            "Plugin": {
              "name": "oxygengine-ha-renderer-atlas",
              "params": {
                "input_directories": [],
                "output": "atlases/",
                "assets_path_prefix": "atlases/",
                "max_width": 1024,
                "max_height": 1024
              }
            }
          },
          {
            "Plugin": {
              "name": "oxygengine-ha-renderer-bmfont",
              "params": {
                "descriptors": [
                  "fonts/roboto.fnt"
                ],
                "output": "fonts/",
                "assets_path_prefix": "fonts/",
                "padding": 1,
                "max_width": 512,
                "max_height": 512,
                "generator": {
                  "resolution": 0,
                  "write_channels": {
                    "red": "Alpha",
                    "green": "Alpha",
                    "blue": "Alpha",
                    "alpha": "Alpha"
                  }
                }
              }
            }
          },
          {
            "Plugin": {
              "name": "oxygengine-ha-renderer-ldtk",
              "params": {
                "input_projects": [
                  "levels/world.ldtk"
                ],
                "output": "levels/",
                "assets_path_prefix": "levels/",
                "tile_margin": {
                  "x": 0.01,
                  "y": 0.01
                },
                "rules": [
                  {
                    "name": "Player",
                    "macro_file": "../tools/ldtk/Player.chrobry"
                  },
                  {
                    "name": "Speed",
                    "macro_file": "../tools/ldtk/Speed.chrobry"
                  },
                  {
                    "name": "UiSync",
                    "macro_file": "../tools/ldtk/UiSync.chrobry"
                  },
                  {
                    "name": "UiView",
                    "macro_file": "../tools/ldtk/UiView.chrobry"
                  }
                ]
              }
            }
          },
          {
            "Copy": {
              "from": [
                "animations/",
                "assets.txt"
              ]
            }
          }
        ]
      }
    },
    {
      "Pipeline": {
        "destination": "../assets-baked",
        "clear_destination": true,
        "commands": [
          {
            "Pack": {
              "paths": [
                "../assets-intermediate/"
              ],
              "output": "assets.pack"
            }
          }
        ]
      }
    }
  ]
}