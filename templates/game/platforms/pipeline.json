{
  "commands": [
    {
      "Pipeline": {
        "source": "../assets",
        "destination": "../assets-intermediate",
        "clear_destination": true,
        "commands": [
          {
            "Plugin": {
              "name": "oxygengine-ha-renderer-atlas",
              "params": {
                "input_directories": [
                  "atlases/ui"
                ],
                "output": "atlases/",
                "assets_path_prefix": "atlases/",
                "max_width": 64,
                "max_height": 64
              }
            }
          },
          {
            "Plugin": {
              "name": "oxygengine-ha-renderer-bmfont",
              "params": {
                "descriptors": [
                  "fonts/pixel.fnt"
                ],
                "output": "fonts/",
                "assets_path_prefix": "fonts/",
                "image_filtering": "Nearest",
                "padding": 1,
                "max_width": 64,
                "max_height": 64,
                "force_line_height": 8,
                "generator": {
                  "resolution": 0,
                  "write_channels": {
                    "red": "Alpha",
                    "green": "Alpha",
                    "blue": "Alpha",
                    "alpha": "Alpha"
                  }
                }
              }
            }
          },
          {
            "Plugin": {
              "name": "oxygengine-ha-renderer-ldtk",
              "params": {
                "input_projects": [
                  "levels/world.ldtk"
                ],
                "output": "levels/",
                "assets_path_prefix": "levels/",
                "image_filtering": "Nearest",
                "tile_margin": {
                  "x": 0.01,
                  "y": 0.01
                },
                "rules": [
                  {
                    "name": "AvatarCombat",
                    "macro_file": "../tools/ldtk/AvatarCombat.chrobry"
                  },
                  {
                    "name": "AvatarMovement",
                    "macro_file": "../tools/ldtk/AvatarMovement.chrobry"
                  },
                  {
                    "name": "BatchedIcons",
                    "macro_file": "../tools/ldtk/BatchedIcons.chrobry"
                  },
                  {
                    "name": "Blink",
                    "macro_file": "../tools/ldtk/Blink.chrobry"
                  },
                  {
                    "name": "BoardAvatar",
                    "macro_file": "../tools/ldtk/BoardAvatar.chrobry"
                  },
                  {
                    "name": "BoardChunk",
                    "macro_file": "../tools/ldtk/BoardChunk.chrobry"
                  },
                  {
                    "name": "CameraPostProcess",
                    "macro_file": "../tools/ldtk/CameraPostProcess.chrobry"
                  },
                  {
                    "name": "Enemy",
                    "macro_file": "../tools/ldtk/Enemy.chrobry"
                  },
                  {
                    "name": "FollowEntity",
                    "macro_file": "../tools/ldtk/FollowEntity.chrobry"
                  },
                  {
                    "name": "Health",
                    "macro_file": "../tools/ldtk/Health.chrobry"
                  },
                  {
                    "name": "LevelUp",
                    "macro_file": "../tools/ldtk/LevelUp.chrobry"
                  },
                  {
                    "name": "Player",
                    "macro_file": "../tools/ldtk/Player.chrobry"
                  },
                  {
                    "name": "UiSync",
                    "macro_file": "../tools/ldtk/UiSync.chrobry"
                  },
                  {
                    "name": "UiView",
                    "macro_file": "../tools/ldtk/UiView.chrobry"
                  },
                  {
                    "name": "VolumeOverlap",
                    "macro_file": "../tools/ldtk/VolumeOverlap.chrobry"
                  },
                  {
                    "name": "Weapon",
                    "macro_file": "../tools/ldtk/Weapon.chrobry"
                  }
                ]
              }
            }
          },
          {
            "Copy": {
              "from": [
                "animations/",
                "assets.txt"
              ]
            }
          }
        ]
      }
    },
    {
      "Pipeline": {
        "destination": "../assets-baked",
        "clear_destination": true,
        "commands": [
          {
            "Pack": {
              "paths": [
                "../assets-intermediate/"
              ],
              "output": "assets.pack"
            }
          }
        ]
      }
    }
  ]
}